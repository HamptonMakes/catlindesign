!!!
%html
  %head
    %title= @title || "catlin design"
    = stylesheet_link_tag "application"
    <script type="text/javascript" src="/javascripts/prototype.js"></script>
    <script type="text/javascript" src="/javascripts/scriptaculous.js?load=effects"></script>
    <script type="text/javascript" src="/javascripts/lightbox.js"></script>
    <script type="text/javascript" src="/javascripts/lightbox.js"></script>
    <script type="text/javascript" src="/javascripts/css_browser_selector.js"></script>
    <link rel="stylesheet" href="/stylesheets/lightbox.css" type="text/css" media="screen" />
  %body
    #page
      #header
        #logo
          %h1 Catlin Design
        #nav
          = link_to "About Us", area_pages_path(Area["information"]), {:class => "aboutus"}
          = link_to "Designers", people_path, {:class => "designers"}
          = link_to 'Portfolio', albums_path, {:class => "portfolio"}
          = link_to 'Awards', area_pages_path(Area["awards"]), {:class => "awards"}
          = link_to 'Contact Us', area_pages_path(Area["contact"]), {:class => "contactus"}
        .clear
      #content{:class => page_class}
        #sidebar
          %img{:src => "/images/sidebar_img_001.jpg"}
          .border
        #main
          - print_subnav
          = yield
        
        .clear

  <script src="http://www.google-analytics.com/urchin.js" type="text/javascript"></script>
  <script type="text/javascript">_uacct = "UA-3031369-1";urchinTracker();</script>

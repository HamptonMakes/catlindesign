!!!
%html
  %head
    %title= @title || "catlin design"
    = stylesheet_link_tag "application"
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    = javascript_include_tag "application"
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
  %body.home
    %header
      .logo
        %a{:href=>"/"}
      %nav
        .menu-button Menu
        %ul.items
          .links
            %li= link_to "about us", area_pages_path(Area["information"]), {:class => "information"}
            %li= link_to "designers", people_path, {:class => "people"}
            %li= link_to 'portfolio', albums_path, {:class => "albums"}
            %li= link_to 'awards', area_pages_path(Area["awards"]), {:class => "awards"}
            %li= link_to 'contact us', area_pages_path(Area["contact"]), {:class => "contact"}
        .clear
    .main= yield
  <script src="http://www.google-analytics.com/urchin.js" type="text/javascript"></script>
  <script type="text/javascript">_uacct = "UA-3031369-1";urchinTracker();</script>
